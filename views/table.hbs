<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="../css/reset.css">
  <link rel="stylesheet" href="../css/table.css">
</head>

<body>
  <main>
    <div class="container">
      <div class="main__inner">
        <div>
          <ul id="columns">
            {{#each columns as |column index|}}
            <li>{{column}}</li>
            {{/each}}
          </ul>
          {{#each data as |dat|}}
          <ul class="dataElement" onclick="clickedElement(this,'{{../columns}}')">
            {{#each ../columns as |column|}}
            {{#ifEquals column "Image"}}
            <li><img src="{{lookup dat (column)}}"></li>
            {{else}}
            <li>{{lookup dat (column)}}</li>
            {{/ifEquals }}

            {{/each}}
          </ul>
          {{/each}}
        </div>
        <div class="actions">
          {{#each columns as |column|}}
          {{#ifEquals column "Image"}}
          <div for="file" class="btn_image" onclick="document.getElementById('{{column}}').click();">
            <span>Выберите картинку</span>
            <input type="file" id="{{column}}" style="display:none;" accept="image/*">
          </div>
          {{else}}
          <span>{{column}}</span>
          <input type="text" id="{{column}}">
          {{/ifEquals }}
          {{/each}}
          <button id="save" name="{{tableName}}/{{primaryKey}}">Сохранить</button>
          <button id="change" name="{{tableName}}/{{primaryKey}}">Изменить</button>
          <button id="delete" name="{{tableName}}/{{primaryKey}}">Удалить</button>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="../js/table.js"></script>
</body>

</html>